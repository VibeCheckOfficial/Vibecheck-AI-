{
  "name": "vibecheck-AI",
  "displayName": "Vibecheck — Agent Firewall (Stop Context Drift)",
  "description": "Stop AI context drift before it ships. Blocks ghost routes, env vars, and auth mismatches unless proven against repo truth. Proof-carry-change for Cursor, Copilot, Claude, and Windsurf.",
  "version": "5.0.0",
  "publisher": "Vibecheck-AI",
  "icon": "images/vibe_logo.ico",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://vibecheck.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/vibecheck-oss/vibecheck"
  },
  "bugs": {
    "url": "https://github.com/vibecheck-oss/vibecheck/issues"
  },
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=20.11"
  },
  "categories": [
    "Linters",
    "Testing",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "cursor",
    "copilot",
    "claude",
    "ai coding",
    "ai hallucination",
    "mcp",
    "model context protocol",
    "ai guardrail",
    "vibe coding",
    "fake features",
    "code security",
    "ai agent",
    "windsurf",
    "codeium",
    "ai code review",
    "hallucination detection",
    "agent firewall",
    "context drift",
    "repo lock",
    "proof-carry-change"
  ],
  "galleryBanner": {
    "color": "#0a0a0a",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:vibecheck.sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibecheck.scan",
        "title": "Scan Current File",
        "icon": "$(search)",
        "category": "VibeCheck"
      },
      {
        "command": "vibecheck.scanWorkspace",
        "title": "Scan Entire Workspace",
        "icon": "$(folder)",
        "category": "VibeCheck"
      },
      {
        "command": "vibecheck.openDashboard",
        "title": "Open Dashboard",
        "icon": "$(dashboard)",
        "category": "VibeCheck"
      },
      {
        "command": "vibecheck.quickActions",
        "title": "Quick Actions",
        "icon": "$(zap)",
        "category": "VibeCheck"
      },
      {
        "command": "vibecheck.fix",
        "title": "Auto-Fix Issue",
        "icon": "$(sparkle)",
        "category": "VibeCheck"
      },
      {
        "command": "vibecheck.fixAll",
        "title": "Fix All Issues in File",
        "icon": "$(wand)",
        "category": "VibeCheck"
      },
      {
        "command": "vibecheck.realityMode",
        "title": "Run Reality Mode",
        "icon": "$(beaker)",
