    "problemMatchers": [
      {
        "name": "vibecheck",
        "owner": "vibecheck",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning|info)\\s+(.+)\\s+\\[(.+)\\]$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5,
          "code": 6
        }
      }
    ],
    "walkthroughs": [
      {
        "id": "vibecheck.gettingStarted",
        "title": "Get Started with VibeCheck",
        "description": "Learn how to use VibeCheck to catch fake features and security issues in AI-generated code",
        "steps": [
          {
            "id": "welcome",
            "title": "Welcome to VibeCheck",
            "description": "VibeCheck catches **fake features** in AI-generated code - code that looks right but doesn't actually work. Built for \"vibe coders\" using Cursor, Copilot, or Claude.\n\n[Get Started](command:vibecheck.quickActions)",
            "media": {
              "image": "images/walkthrough-welcome.svg",
              "altText": "Welcome to VibeCheck"
            },
            "completionEvents": [
              "onCommand:vibecheck.quickActions"
            ]
          },
          {
            "id": "scanFile",
            "title": "Scan Your First File",
            "description": "Open any TypeScript, JavaScript, or Python file and press:\n- **Mac**: ``Cmd+Shift+V``\n- **Win/Linux**: ``Ctrl+Shift+V``\n\nVibeCheck will scan for fake features, security issues, and AI hallucinations.\n\n[Scan Current File](command:vibecheck.scan)",
            "media": {
              "image": "images/walkthrough-scanning.svg",
              "altText": "One-click security scanning"
            },
            "completionEvents": [
              "onCommand:vibecheck.scan"
            ]
          },
          {
            "id": "quickActions",
            "title": "Quick Actions Menu",
            "description": "Access all VibeCheck features from one menu:\n- **Mac**: ``Cmd+Shift+A``\n- **Win/Linux**: ``Ctrl+Shift+A``\n\nThis is your command center for scanning, fixing, and reporting.\n\n[Open Quick Actions](command:vibecheck.quickActions)",
            "media": {
              "image": "images/walkthrough-welcome.svg",
              "altText": "Quick Actions menu"
            },
            "completionEvents": [
              "onCommand:vibecheck.quickActions"
            ]
          },
          {
            "id": "codeFlow",
            "title": "Trace Data Flow",
            "description": "Visualize how data flows through your code to identify security risks like SQL injection or XSS:\n- **Mac**: ``Cmd+Shift+T`` or ``Cmd+Alt+T`` to trace a variable\n- **Win/Linux**: ``Ctrl+Shift+T``\n\nSee sources, transforms, and sinks with color-coded highlighting.\n\n[Analyze Code Flow](command:vibecheck.analyzeCodeFlow)",
            "media": {
              "image": "images/walkthrough-codeflow.svg",
              "altText": "Code Flow Visualizer"
            },
            "completionEvents": [
              "onCommand:vibecheck.analyzeCodeFlow"
            ]
          },
          {
            "id": "heatmap",
            "title": "Security Heatmap",
            "description": "See security risk density across your entire codebase at a glance:\n- **Mac**: ``Cmd+Shift+H``\n- **Win/Linux**: ``Ctrl+Shift+H``\n\nRed = Critical, Orange = High, Yellow = Medium. Find hotspots instantly.\n\n[Show Security Heatmap](command:vibecheck.showSecurityHeatmap)",
            "media": {
              "image": "images/walkthrough-heatmap.svg",
              "altText": "Security Heatmap visualization"
            },
            "completionEvents": [
              "onCommand:vibecheck.showSecurityHeatmap"
            ]
          },
          {
            "id": "realityMode",
            "title": "Reality Mode Testing",
            "description": "Test if your features **actually work** with automated browser testing powered by Playwright:\n- **Mac**: ``Cmd+Shift+R``\n- **Win/Linux**: ``Ctrl+Shift+R``\n\nCatches \"fake features\" that compile but don't function.\n\n[Run Reality Mode](command:vibecheck.realityMode)",
            "media": {
              "image": "images/walkthrough-reality-mode.svg",
              "altText": "Reality Mode browser testing"
            },
            "completionEvents": [
              "onCommand:vibecheck.realityMode"
            ]
          },
          {
            "id": "aiExplainer",
            "title": "AI Security Explainer",
            "description": "Get AI-powered explanations of suspicious code. Select code and:\n- **Mac**: ``Cmd+Shift+E``\n- **Win/Linux**: ``Ctrl+Shift+E``\n\nOr right-click → \"Explain with AI\". Understand what the code does and why it's risky.\n\n[Explain Code](command:vibecheck.explainCode)",
            "media": {
              "image": "images/walkthrough-ai-explainer.svg",
              "altText": "AI-powered code explanation"
            },
            "completionEvents": [
              "onCommand:vibecheck.explainCode"
            ]
          },
          {
            "id": "exportReports",
            "title": "Export Professional Reports",
            "description": "Generate compliance-ready reports in multiple formats:\n- **HTML**: Interactive, shareable\n- **PDF**: Print-ready executive summary\n- **Markdown**: Git-friendly documentation\n- **SARIF**: CI/CD integration\n\nPress ``Cmd+Alt+E`` (Mac) or ``Ctrl+Alt+E`` (Win/Linux).\n\n[Export Report](command:vibecheck.exportReport)",
            "media": {
              "image": "images/walkthrough-reports.svg",
              "altText": "Multi-format report export"
            },
            "completionEvents": [
              "onCommand:vibecheck.exportReport"
            ]
          },
          {
            "id": "dashboard",
            "title": "Analytics Dashboard",
            "description": "View comprehensive security analytics:\n- Security score over time\n- Issue trends and hotspots\n- Coverage metrics\n- Fix recommendations\n\n[Open Dashboard](command:vibecheck.openDashboard)",
            "media": {
              "image": "images/banner.svg",
              "altText": "VibeCheck Dashboard"
            },
            "completionEvents": [
              "onCommand:vibecheck.openDashboard"
            ]
          },
          {
            "id": "autoFix",
            "title": "AI-Powered Auto-Fix",
            "description": "Let VibeCheck automatically fix issues:\n- Click the lightbulb on any issue\n- Or press ``Cmd+.`` (Mac) / ``Ctrl+.`` (Win/Linux)\n- Choose \"VibeCheck: Fix\" or \"Fix All\"\n\nAI generates secure, production-ready fixes.\n\n[Fix All Issues](command:vibecheck.fixAll)",
            "media": {
              "image": "images/walkthrough-welcome.svg",
              "altText": "Auto-fix with AI"
            },
            "completionEvents": [
              "onCommand:vibecheck.fixAll"
            ]
          }
        ]
      }
    ],
