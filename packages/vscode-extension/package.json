    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibecheck",
          "title": "VibeCheck",
          "icon": "images/vibecheck-icon.svg"
        }
      ]
    },
    "views": {
      "vibecheck": [
        {
          "type": "webview",
          "id": "vibecheck.sidebar",
          "name": "VibeCheck",
          "contextualTitle": "VibeCheck Dashboard",
          "visibility": "visible"
        },
        {
          "id": "vibecheck.issues",
          "name": "Issues",
          "contextualTitle": "Security Issues"
        },
        {
          "id": "vibecheck.history",
          "name": "Scan History",
          "contextualTitle": "Recent Scans"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vibecheck.issues",
        "contents": "No issues detected.\n[Scan Current File](command:vibecheck.scan)\n[Scan Workspace](command:vibecheck.scanWorkspace)\n[Open Quick Actions](command:vibecheck.quickActions)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vibecheck.scan",
          "when": "view == vibecheck.issues",
          "group": "navigation"
        },
        {
          "command": "vibecheck.refreshIssues",
          "when": "view == vibecheck.issues",
          "group": "navigation"
        },
        {
          "command": "vibecheck.exportReport",
          "when": "view == vibecheck.issues"
        },
        {
          "command": "vibecheck.clearIssues",
          "when": "view == vibecheck.issues"
        }
      ],
      "view/item/context": [
        {
          "command": "vibecheck.fix",
          "when": "view == vibecheck.issues && viewItem == issue",
          "group": "inline"
        },
        {
          "command": "vibecheck.ignoreIssue",
          "when": "view == vibecheck.issues && viewItem == issue"
        },
        {
          "command": "vibecheck.ignoreRule",
          "when": "view == vibecheck.issues && viewItem == issue"
        },
        {
          "command": "vibecheck.explainSecurityRisk",
          "when": "view == vibecheck.issues && viewItem == issue"
        }
      ],
      "editor/context": [
        {
          "submenu": "vibecheck.submenu",
          "group": "vibecheck"
        }
      ],
      "explorer/context": [
        {
          "submenu": "vibecheck.lockSubmenu",
          "group": "2_workspace",
          "when": "explorerResourceIsFolder || !explorerResourceIsFolder"
        }
      ],
      "vibecheck.lockSubmenu": [
        {
          "command": "vibecheck.lockFile",
          "when": "!explorerResourceIsFolder && !vibecheck.isLocked",
          "group": "1_lock"
        },
        {
          "command": "vibecheck.lockFolder",
          "when": "explorerResourceIsFolder && !vibecheck.isLocked",
          "group": "1_lock"
        },
        {
          "command": "vibecheck.unlockFile",
          "when": "!explorerResourceIsFolder && vibecheck.isLocked",
          "group": "1_lock"
        },
        {
          "command": "vibecheck.unlockFolder",
          "when": "explorerResourceIsFolder && vibecheck.isLocked",
          "group": "1_lock"
        },
        {
          "command": "vibecheck.showLockedFiles",
          "group": "2_manage"
        },
        {
          "command": "vibecheck.unlockAll",
          "group": "2_manage"
        }
      ],
      "vibecheck.submenu": [
        {
          "command": "vibecheck.scan",
          "group": "1_scan"
        },
        {
          "command": "vibecheck.fix",
          "group": "1_scan",
          "when": "vibecheck.hasIssueAtCursor"
        },
        {
          "command": "vibecheck.fixAll",
          "group": "1_scan"
        },
        {
          "command": "vibecheck.analyzeCodeFlow",
          "group": "2_analyze"
        },
        {
          "command": "vibecheck.traceVariable",
          "group": "2_analyze"
        },
        {
          "command": "vibecheck.analyzeSecurityRisk",
          "group": "2_analyze"
        },
        {
          "command": "vibecheck.explainCode",
          "group": "3_ai"
        },
        {
          "command": "vibecheck.explainSecurityRisk",
          "group": "3_ai"
        },
        {
          "command": "vibecheck.realityModeFile",
          "group": "4_test"
        }
      ],
      "editor/title": [
        {
          "command": "vibecheck.scan",
          "group": "navigation",
          "when": "resourceLangId =~ /javascript|typescript|typescriptreact|javascriptreact|python|go|rust/"
        },
        {
          "command": "vibecheck.quickActions",
          "group": "navigation",
          "when": "resourceLangId =~ /javascript|typescript|typescriptreact|javascriptreact|python|go|rust/"
        }
      ],
      "commandPalette": [
        {
          "command": "vibecheck.showIssueDetails",
          "when": "false"
        }
      ]
    },
    "submenus": [
      {
        "id": "vibecheck.submenu",
        "label": "VibeCheck"
      },
      {
        "id": "vibecheck.lockSubmenu",
        "label": "VibeCheck Lock",
        "icon": "$(lock)"
      }
    ],
    "keybindings": [
      {
        "command": "vibecheck.scan",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus"
      },
      {
        "command": "vibecheck.quickActions",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "vibecheck.fix",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus && vibecheck.hasIssueAtCursor"
      },
      {
        "command": "vibecheck.fixAll",
        "key": "ctrl+alt+shift+f",
        "mac": "cmd+alt+shift+f",
        "when": "editorTextFocus"
      },
      {
        "command": "vibecheck.openDashboard",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      },
      {
        "command": "vibecheck.realityMode",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "vibecheck.analyzeCodeFlow",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "vibecheck.traceVariable",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      },
      {
        "command": "vibecheck.showSecurityHeatmap",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h"
      },
      {
        "command": "vibecheck.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "vibecheck.exportReport",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e"
      },
      {
        "command": "vibecheck.promptBuilder",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "vibecheck.promptBuilderQuick",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      }
    ],
    "configuration": {
      "title": "VibeCheck",
      "properties": {
        "vibecheck.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable VibeCheck extension"
        },
        "vibecheck.scanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan files on save"
        },
        "vibecheck.scanOnOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan files when opened"
        },
        "vibecheck.watchMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable real-time scanning as you type"
        },
        "vibecheck.watchModeDelay": {
          "type": "number",
          "default": 1000,
          "description": "Delay in ms before scanning after typing stops"
        },
        "vibecheck.severity.error": {
          "type": "string",
          "default": "Error",
          "enum": [
            "Error",
            "Warning",
            "Information",
            "Hint"
          ],
          "description": "VS Code severity for VibeCheck errors"
        },
        "vibecheck.severity.warning": {
          "type": "string",
          "default": "Warning",
          "enum": [
            "Error",
            "Warning",
            "Information",
            "Hint"
          ],
          "description": "VS Code severity for VibeCheck warnings"
        },
        "vibecheck.engines": {
          "type": "array",
          "default": [
            "fake-feature",
            "security",
            "hallucination",
            "dependency"
          ],
          "items": {
            "type": "string",
            "enum": [
              "fake-feature",
              "security",
              "hallucination",
              "dependency",
              "performance",
              "accessibility"
            ]
          },
          "description": "Scanning engines to enable"
        },
        "vibecheck.ignorePaths": {
          "type": "array",
          "default": [
            "node_modules",
            "dist",
            "build",
            ".git",
            "coverage",
            ".next",
            "__pycache__"
          ],
          "items": {
            "type": "string"
          },
          "description": "Paths to ignore during scanning"
        },
        "vibecheck.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to VibeCheck CLI (uses global installation if empty)"
        },
        "vibecheck.apiKey": {
          "type": "string",
          "default": "",
          "description": "VibeCheck API key for cloud features"
        },
        "vibecheck.autoFix.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered auto-fix suggestions"
        },
        "vibecheck.autoFix.provider": {
          "type": "string",
          "default": "anthropic",
          "enum": [
            "anthropic",
            "openai",
            "local"
          ],
          "description": "AI provider for auto-fix"
        },
        "vibecheck.realityMode.browser": {
          "type": "string",
          "default": "chromium",
          "enum": [
            "chromium",
            "firefox",
            "webkit"
          ],
          "description": "Browser to use for Reality Mode testing"
        },
        "vibecheck.realityMode.headless": {
          "type": "boolean",
          "default": true,
          "description": "Run Reality Mode in headless mode"
        },
        "vibecheck.realityMode.viewport": {
          "type": "object",
          "default": {
            "width": 1280,
            "height": 720
          },
          "properties": {
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            }
          },
          "description": "Viewport size for Reality Mode tests"
        },
        "vibecheck.realityMode.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Timeout in ms for Reality Mode tests"
        },
        "vibecheck.realityMode.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL for Reality Mode tests (auto-detected if empty)"
        },
        "vibecheck.ai.provider": {
          "type": "string",
          "default": "anthropic",
          "enum": [
            "anthropic",
            "openai"
          ],
          "description": "AI provider for code explanation"
        },
        "vibecheck.ai.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key for Claude"
        },
        "vibecheck.ai.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for GPT-4"
        },
        "vibecheck.codeFlow.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Code Flow Visualizer"
        },
        "vibecheck.codeFlow.showDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline decorations for code flow"
        },
        "vibecheck.heatmap.enabled": {
          "type": "boolean",
          "default": true,
